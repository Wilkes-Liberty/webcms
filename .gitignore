# Drupal .gitignore
# Never commit contributed code or dependencies

# Composer dependencies
vendor/

# Drupal core
web/core/

# Drupal root files (managed by Composer)
web/autoload.php
web/index.php
web/update.php
web/.ht.router.php
web/.csslintrc
web/.eslintrc*
web/.eslintignore
web/example.*
web/INSTALL.*
web/modules/README.txt
web/profiles/README.txt
web/sites/README.txt
web/sites/example.*
web/themes/README.txt

# Allow important web root files
!web/.htaccess
!web/robots.txt

# Contributed modules and themes
web/modules/contrib/
web/themes/contrib/

# Drupal's generated files
web/sites/*/files/
web/sites/*/private/
web/sites/*/files/php/
web/sites/*/files/css/
web/sites/*/files/js/
web/sites/*/files/styles/

# Configuration files that may contain sensitive information
web/sites/*/settings*.php
web/sites/*/services*.yml
web/sites/development.services.yml
web/sites/local.services.yml
web/sites/*/local.settings.php

# Temporary files
*.tmp
*.temp
*~

# OS generated files
.DS_Store
.DS_Store?
._*
.Spotlight-V100
.Trashes
ehthumbs.db
Thumbs.db

# IDE files
.vscode/
.idea/
*.swp
*.swo

# DDEV
.ddev/db_snapshots/
.ddev/.dbimageBuild/
.ddev/traefik/certs/
.ddev/traefik/config/*-generated.yaml

# Security sensitive files
keys/

# Database dumps
*.sql
*.sql.gz

# Backups
backups*
